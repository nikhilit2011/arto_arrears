<%# app/views/kaminari/_paginator.html.erb (compat version) %>
<%= paginator.render do %>
  <nav class="my-4 flex items-center justify-center gap-2">
    <%= first_page_tag %>
    <%= prev_page_tag %>

    <% each_page do |page| %>
      <% if page.left_outer? || page.right_outer? || page.inside_window? %>
        <%= page_tag(page) %>
      <% elsif !page.was_truncated? %>
        <span>â€¦</span>
      <% end %>
    <% end %>

    <%= next_page_tag %>
    <%= last_page_tag %>
  </nav>
<% end %>
