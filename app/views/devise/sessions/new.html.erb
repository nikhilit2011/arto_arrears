<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded shadow w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %> <br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border rounded px-3 py-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700" %> <br>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full border rounded px-3 py-2" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>
</div>
