<div class="max-w-xl mx-auto mt-10 bg-white shadow rounded p-6">
  <h1 class="text-2xl font-bold mb-4">Import Notices Excel</h1>
  <%= form_with url: imports_arrear_cases_path, method: :post, multipart: true, class: "space-y-4" do %>
    <div>
      <label class="block mb-1">Excel File (.xlsx/.xls)</label>
      <%= file_field_tag :file, accept: ".xlsx,.xls", class: "border rounded px-3 py-2 w-full" %>
    </div>
    <div class="flex gap-2">
      <%= submit_tag "Upload & Import", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
      <%= link_to "Back", arrear_cases_path, class: "px-4 py-2 rounded border" %>
    </div>
  <% end %>
  <p class="text-sm text-gray-500 mt-3">Headers can be in any order. Required: Vehicle No, Notice fields.</p>
</div>
